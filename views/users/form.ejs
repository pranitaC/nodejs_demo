<% var url = user.isNew ? "/users" : "/users/"+user._id+"?_method=PUT" %>
<form action="<%= url %>" method="POST">
  <div>
    <label>Name:</label>
    <input type="text" name="user[name]" value="<%= user.name %>"><br/><br/>
  </div>
  <div>
    <label>Email:</label>
    <input type="text" name="user[email]" value="<%= user.email %>"><br/><br/>
  </div>
  <div>
    <label>Phone:</label>
    <input type="text" name="user[phone]" value="<%= user.phone %>"><br/><br/>
  </div>
  <div>
    <label>Age:</label>
    <input type="text" name="user[age]" value="<%= user.age %>"><br/><br/>
  </div>
  <div>
    <label>Gender:</label>
    <select name="user[gender]">
      <option value=''>Select Gender</option>
      <option value='m' <%= user.gender == 'm' ? "selected='selected'" : "" %>>Male</option>
      <option value='f' <%= user.gender == 'f' ? "selected='selected'" : "" %>>Female</option>
    </select>
    <br/><br/>
  </div>
  <div>
    <input type="submit" value="<%= user.isNew ? "Create" : "Update" %>"/>
  </div>
</form>
