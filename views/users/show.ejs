  <body>
    <%- include('../layouts/bootstrap_header') %>
    <div class="container">
      <div class="row">
        <div>
          <div>Name: <%= user.name %></div>
          <div>Email: <%= user.email %></div>		
          <div>Phone: <%= user.phone %></div>
          <div>Age : <%= user.age %></div>
          <div>Gender : <%= user.gender %></div>
          <div>Image: <img src="<%= user.image_url %>" width="200px"></div>		
        </div>
        <div>
          <br><a href="/users" class="btn btn-info">Back</a> | <a href="/users/<%= user._id %>/edit" class="btn btn-info">Edit</a></br>
        </div>
      </div>  
    </div>
