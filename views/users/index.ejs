<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Demo App</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css"></link>
    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="/javascripts/html5shiv.min.js"></script>
      <script src="/javascripts/respond.min.js"></script>
    <![endif]-->
    
  </head>
  <body>
    <div class="container">
    <h4> Users </h4>
      <%- include('../layouts/bootstrap_header') %>
      <div>
        <br><h4>
          Users
        </h4></br>  
      </div>  
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Email</th>		
          <th>Phone</th>
          <th>Age</th>
          <th>Gender</th>
          <th colspan="3">Actions</th>
        </tr>
        <% for(var i = 0; i < records.length; i++) { %>
          <tr>
            <td><%= records[i].name %></td>
            <td><%= records[i].email %></td>		
            <td><%= records[i].phone %></td>
            <td><%= records[i].age %></td>
            <td><%= records[i].gender %></td>
            <td><a href="/users/<%= records[i]._id %>" class="btn btn-info">Show</a></td>
            <td><a href="/users/<%= records[i]._id %>/edit" class="btn btn-info">Edit</a></td>
            <td>
              <form action="/users/<%= records[i]._id %>?_method=DELETE" method='post'>
                <input type="submit" value="Delete" class="btn btn-danger"/>
              </form>
            </td>
          </tr>
        <% } %>
      </table>
      <div>
        <br/>
        <a href="/users/new">Create New User</a>
      </div>
    </div>
  </body>
</html>
