<html>
  <head>
    <title>Demo App</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>
  </head>
  <body>
    <div class="container">
      <%- include('../layouts/header') %>
      <div>
        <h4>
          Users
        </h4>  
      </div>  
      <table border="1" style="width:50%">
        <tr>
          <th>Name</th>
          <th>Email</th>		
          <th>Phone</th>
          <th>Age</th>
          <th>Gender</th>
          <th colspan="3">Actions</th>
        </tr>
        <% for(var i = 0; i < records.length; i++) { %>
          <tr>
            <td><%= records[i].name %></td>
            <td><%= records[i].email %></td>		
            <td><%= records[i].phone %></td>
            <td><%= records[i].age %></td>
            <td><%= records[i].gender %></td>
            <td><a href="/users/<%= records[i]._id %>">Show</a></td>
            <td><a href="/users/<%= records[i]._id %>/edit">Edit</a></td>
            <td>
              <form action="/users/<%= records[i]._id %>?_method=DELETE" method='post'>
                <input type="submit" value="Delete"/>
              </form>
            </td>
          </tr>
        <% } %>
      </table>
      <div>
        <br/>
        <a href="/users/new">Create New User</a>
      </div>
    </div>
  </body>
</html>
